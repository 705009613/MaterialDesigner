<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap
            android:mipMap="true"
            android:gravity="center"
            android:tileMode="clamp"
            android:src="@mipmap/imv_ctl"/>
    </item>
    <item
        android:left="10dp"
        android:top="10dp">
        <bitmap
            android:mipMap="true"
            android:gravity="center"
            android:src="@mipmap/imv_scenery" />
    </item>
    <item
        android:left="40dp"
        android:top="40dp">
        <bitmap
            android:mipMap="true"
            android:gravity="center"
            android:src="@mipmap/imv_scenery"/>
    </item>
</layer-list>